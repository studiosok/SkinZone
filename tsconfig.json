{
    "compilerOptions": {
      "outDir": "build",
      "target": "esnext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules"
    ]
  }